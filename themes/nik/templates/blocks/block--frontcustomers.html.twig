<div class="ui text container mb6 mt4 front-customers">
    <h2 class="ui container header center aligned">{{ 'Our Customers' | t }}</h2>
    <h5 class="ui horizontal divider header nik-red fwn">
        <a href="{{ url('<front>') }}/company/#our-customers">{{ 'see all customers' | t }}</a>
        <i class="angle right icon"></i>
    </h5>
    <p class="font-color">
        {% block content %}
            {{ content }}
        {% endblock %}
    </p>

    <div class="mt2 card-cross">
        {{ drupal_view('get_items_bye_type', 'block_3', 'Customers') }}
    </div>
</div>

<script type="text/javascript">
    jQuery(function () {
        jQuery('.front-customers .view-content').slick({
            rtl : NIK.isRTL,
            slidesToShow: 5,
            slidesToScroll: 5,
            infinite: true,
            arrows: true,
            dots: true,
            autoplay: true,
            autoplaySpeed: 2000,
            responsive: [
                {
                    breakpoint: NIK.responsive.large_screen,
                    settings: {
                        slidesToShow: 5,
                        slidesToScroll: 5,
                        infinite: true
                    }
                },
                {
                    breakpoint: NIK.responsive.computer,
                    settings: {
                        arrows: false,
                        slidesToShow: 5,
                        slidesToScroll: 5,
                        dots: false
                    }
                },
                {
                    breakpoint: NIK.responsive.tablet,
                    settings: {
                        arrows: false,
                        slidesToShow: 3,
                        slidesToScroll: 3,
                        dots: false
                    }
                }
            ]
        });
        setTimeout(function() {
            jQuery('.front-customers .view-content .tiny-things').popup(
                {
                    position: 'top center'
                }
            );
        }, 200);

    });
</script>

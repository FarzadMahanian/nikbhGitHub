<div class="mask-all"></div>
<div class="layout-container frontpage">
    <header role="banner">
        {{ page.header }}
        {{ page.primary_menu }}
    </header>

    {{ page.slideshow }}

    {{ page.highlighted }}

    {{ page.help }}

    <main class="ui main" role="main">
        <div class="layout-content">
            {{ page.content }}
        </div>
    </main>

    {% if page.footer %}
        <footer role="footer">
            {{ page.footer }}
        </footer>
    {% endif %}

</div>

{% if node.field_main_picture|length > 0 %}
    <div class="ui blur-top mix-blend" style="background: url({{ node.field_main_picture.entity.fileuri | image_style('blur_top') }});">
        <div class="ui container center aligned">
            <h1 class="ui inverted header">{{ label }}</h1>
        </div>
    </div>
{% else %}
    <h1 class="ui center aligned header pt1">{{ label }}</h1>
{% endif %}
<div class="ui main container">

    <div class="ui text container">
        <div class="ui tiny breadcrumb">
            <a class="section" href="{{ url('<front>') }}">{{ 'Home' | t }}</a>
            <i class="right chevron icon divider"></i>
            <div class="active section">{{ label }}</div>
        </div>
        <div class="ui clearing divider"></div>

        {% if node.field_main_picture|length > 0 %}
            <img class="ui image fluid" src="{{ node.field_main_picture.entity.fileuri | image_style('main_picture') }}" alt="{{ label[0]['#context']['value'] }}">
        {% endif %}

        <div class="mt2">
            {{ content.body }}

            {% if 'application' in label %}
                <div class="ui grid pt3">
                    <div class="eight wide column ">
                        <div class="ui olive segment">
                            <a class="olive" href="#">
                                <i class="android icon big olive"></i>
                                {{ 'Download For Android' | t }}
                            </a>
                        </div>
                    </div>
                    <div class="eight wide column">
                        <div class="ui blue segment">
                            <a class="blue" href="#">
                                <i class="apple icon big blue"></i>
                                {{ 'Download For iOS' | t }}
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}

        </div>

    </div>

</div>


